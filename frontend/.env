# AI Hackathon Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - API Configuration
# =============================================================================
# Backend API base URL (required)
# Default: http://localhost:8000
VITE_API_BASE=http://localhost:8000

# =============================================================================
# OPTIONAL - Development Configuration
# =============================================================================
# Enable development mode features (default: true in dev)
VITE_DEV_MODE=true

# Enable debug logging (default: false)
VITE_DEBUG=false

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================
# Enable experimental features (default: false)
VITE_EXPERIMENTAL_FEATURES=false

# Enable analytics (default: false)
VITE_ANALYTICS_ENABLED=false

# =============================================================================
# OPTIONAL - UI Configuration
# =============================================================================
# Default theme (default: light)
VITE_DEFAULT_THEME=light

# Enable dark mode (default: true)
VITE_DARK_MODE_ENABLED=true

# =============================================================================
# OPTIONAL - Performance Configuration
# =============================================================================
# Enable service worker (default: false)
VITE_SERVICE_WORKER_ENABLED=false

# Enable PWA features (default: false)
VITE_PWA_ENABLED=false

# =============================================================================
# OPTIONAL - External Services
# =============================================================================
# Sentry DSN for error tracking (default: empty)
VITE_SENTRY_DSN=

# Google Analytics ID (default: empty)
VITE_GA_ID=

# =============================================================================
# OPTIONAL - Development Server
# =============================================================================
# Development server port (default: 5173)
VITE_DEV_PORT=5173

# Development server host (default: localhost)
VITE_DEV_HOST=localhost

# =============================================================================
# OPTIONAL - Build Configuration
# =============================================================================
# Build output directory (default: dist)
VITE_BUILD_OUTPUT_DIR=dist

# Enable source maps in production (default: false)
VITE_SOURCE_MAPS_IN_PROD=false
