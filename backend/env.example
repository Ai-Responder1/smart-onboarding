# AI Hackathon Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - OpenAI Configuration
# =============================================================================
# Your OpenAI API key (required for GPT-4.1 and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL - OpenAI Model Configuration
# =============================================================================
# LLM model to use (default: gpt-4.1)
OPENAI_MODEL=gpt-4.1

# Embeddings model to use (default: text-embedding-3-small)
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# LLM temperature for response generation (default: 0.2)
LLM_TEMPERATURE=0.2

# =============================================================================
# OPTIONAL - MongoDB Configuration
# =============================================================================
# MongoDB connection URI (default: mongodb://localhost:27017)
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name (default: ai_hackathon)
MONGODB_DB=ai_hackathon

# =============================================================================
# OPTIONAL - Security Configuration
# =============================================================================
# Fernet encryption key for PAN/Aadhaar (auto-generated if not provided)
# Generate with: python -c "from cryptography.fernet import Fernet;print(Fernet.generate_key().decode())"
PAN_AADHAAR_ENC_KEY=your_fernet_key_here_or_leave_empty_for_auto_generation

# =============================================================================
# OPTIONAL - Storage Configuration
# =============================================================================
# Directory for storing vector database files (default: ./storage/vector_db)
VECTOR_DB_DIR=./storage/vector_db

# Directory for storing uploaded PDF files (default: ./storage/uploads)
UPLOAD_DIR=./storage/uploads

# =============================================================================
# OPTIONAL - CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Default includes Vite dev server URLs
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# =============================================================================
# OPTIONAL - Server Configuration
# =============================================================================
# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# =============================================================================
# OPTIONAL - Logging Configuration
# =============================================================================
# Log level (default: INFO)
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL - Development Configuration
# =============================================================================
# Enable debug mode (default: False)
DEBUG=False

# Enable auto-reload (default: True)
AUTO_RELOAD=True
